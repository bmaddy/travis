#replaceable
  - @story  = story
  - form_remote_for story,  :html=>{:id=>'columnarForm'} do |f|
    =f.hidden_field :iteration_id
    .opform
      %fieldset
        =f.label :title, '', :class=>'first'
        =f.text_field :title
        =f.error_message_on(:title)

        =f.label :description
        =f.text_area :description
        =f.error_message_on(:description)
        =f.label :swag
        =f.text_field :swag, :size=>2
        =f.error_message_on(:swag)
        =submit_tag "Save"
