!!! XML
!!!
%html
  %head
    %title
      Travis!
    =stylesheet_link_tag('reset','horz_menu','type','forms', 'layout',  :cache => true)
    =javascript_include_tag :defaults, "control.modal"
    =calendar_date_select_includes "blue" 
  %body 
    #wrap
      %a.header{:href=>"#{Iteration.current != nil ? iteration_path(Iteration.current) : iterations_path}"}
        =image_tag('travis-logo.gif', :alt=>'Kick Me to the Current Iteration, Travis!')
      #horiz-menu
        =render :partial=>"layouts/menu"
        #stories-search
          =render :partial=>"shared/unified_search"
      #content
        -if flash[:error]
          #flash_error
            =flash[:error]
        -if flash[:notice]
          #flash_notice
            =flash[:notice]
        =yield
      #footer
        - if logged_in?
          = link_to "Logout", logout_path 
        - else
          = link_to "Login", login_path
          |
          = link_to "Create Account", signup_path


