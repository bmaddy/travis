%tr[story, cycle('odd', 'even')]
  %td
    =link_to(h(story.title), story_path(story))
  %td
    %span{:id=>"swag_#{story.id}"}
      -if story.swag
        =story.swag
      -else
        Unswagged

    =in_place_editor "swag_#{story.id}", {:url=>update_swag_story_path(story)}
  %td.centered
    =story.state
  %td.centered
    =story.area
  %td.rctl
    =link_to("Show", story_path(story))
    =link_to("Edit", edit_story_path(story))
