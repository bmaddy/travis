%script{:type=>'text/javascript'}
  var element = document.getElementById('menu_task');
  element.className = 'current';
%h1
  =h @task.title
%p
  =markdown(h(@task.description))
%p
  %h2 State
  =h @task.state

%p
  Assigned To 
  =h @task.login

#stateform
  -form_for @task  do |f|
    =f.label :state
    =f.select :state, @task.available_events
    =submit_tag "save"

  
%table#stories
  %caption Stories
  =render :partial=>'stories/story_header'
  =render :partial=>"stories/story", :collection=>@task.stories
%p
  =link_to("Show All", tasks_path)
  |
  =link_to("Edit", edit_task_path(@task))
  |
  =link_to("Delete", {:id=>@task.id}, :confirm=>"Are you sure?", :method=>"delete")
  |
  =link_to_function "Show History", nil, :update do |page|
    -page.replace_html "history", :partial=>"stories/audit_record", :collection=>@task.audit_records
    -page.insert_html :top,'history', '<tr><th>Login</th><th>Updated At</th><th>Diff</th></tr>'
    -page.visual_effect :toggle_appear, 'history'
    -page.visual_effect :highlight, 'history'
%table#history{:style=>'display:none'}

