%script{:type=>'text/javascript'}
  var element = document.getElementById('menu_task');
  element.className = 'current';
%h1
  =h @task.title
%p
  =h @task.description
%p
  Assigned To 
  =h @task.login
%table#stories
  =render :partial=>"stories/story", :collection=>@task.stories
%p
  -form_tag(take_task_path(@task)) do
    =submit_tag "Take", {:id=>'take_button'}
    =button_to_function "Show All", "location.href='#{tasks_path}'", {:class=>'submit_button'}
    =button_to_function "Edit", "location.href='#{edit_task_path(@task)}'", {:class=>'submit_button'}
    =link_to("Delete", @task, :confirm=>"Are you sure?", :method=>"delete")
